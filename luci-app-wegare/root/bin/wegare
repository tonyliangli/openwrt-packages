#--- Warna Warna
R='\033[1;31m' # Merah Muda
G='\033[1;32m' # Hijau Muda
C='\033[0;36m' # Biru Muda
Y='\033[1;33m' # Kuning
N='\033[1;37m' # Putih


#--------------------------------------------------------
#   If you use some codes frome here, please give credit to www.helmiau.com
#--------------------------------------------------------
# Wegare Tools
rawgit="https://raw.githubusercontent.com"
comgit="https://github.com"
usergit="wegare123"
if [[ $1 = "l2i" ]]; then
	#l2i (Wegare)
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}l2i${Y}..."
	echo -e "================================"
	echo -e "${N}"
	printf 'ctrl+c' | crontab -e > /dev/null
	/etc/init.d/ipsec stop 2>/dev/null
	/etc/init.d/xl2tpd stop 2>/dev/null
	/etc/init.d/ipsec disable 2>/dev/null
	/etc/init.d/xl2tpd disable 2>/dev/null
	ipsec stop 2>/dev/null
	killall -q charon
	wget -q --no-check-certificate "$rawgit/$usergit/l2i/main/l2i.sh" -O /usr/bin/l2i
	wget -q --no-check-certificate "$rawgit/$usergit/l2i/main/autorekonek-l2i.sh" -O /usr/bin/autorekonek-l2i
	chmod +x /usr/bin/l2i
	chmod +x /usr/bin/autorekonek-l2i
	rm -r ~/install.sh
	mkdir -p ~/akun/
	touch ~/akun/l2i.txt
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "opvc" ]]; then
	#opvc (Wegare)
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}opvc${Y}..."
	echo -e "================================"
	echo -e "${N}"
	wget -q --no-check-certificate "$rawgit/$usergit/opvc/main/opvc.sh" -O /usr/bin/opvc
	wget -q --no-check-certificate "$comgit/$usergit/opvc/blob/main/ck-client?raw=true" -O /usr/bin/ck-client
	wget -q --no-check-certificate "$rawgit/$usergit/opvc/main/autorekonek-opvc.sh" -O /usr/bin/autorekonek-opvc
	opkg update && opkg install lsof && opkg install openvpn-openssl fping
	chmod +x /usr/bin/opvc
	chmod +x /usr/bin/ck-client
	chmod +x /usr/bin/autorekonek-opvc
	rm -r ~/install.sh
	mkdir -p ~/akun/
	touch ~/akun/opvc.txt
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "opvs" ]]; then
	#opvs (Wegare)
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}opvs${Y}..."
	echo -e "================================"
	echo -e "${N}"
	wget -q --no-check-certificate "$rawgit/$usergit/opvs/main/opvs.sh" -O /usr/bin/opvs
	wget -q --no-check-certificate "$rawgit/$usergit/opvs/main/autorekonek-opvs.sh" -O /usr/bin/autorekonek-opvs
	opkg update && opkg install lsof openvpn-openssl stunnel fping
	chmod +x /usr/bin/opvs
	chmod +x /usr/bin/autorekonek-opvs
	rm -r ~/install.sh
	mkdir -p ~/akun/
	touch ~/akun/opvs.txt
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "opvss" ]]; then
	#opvss (Wegare)
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}opvss${Y}..."
	echo -e "================================"
	echo -e "${N}"
	opkg update
	wget -q --no-check-certificate "$rawgit/$usergit/opvss/main/opvss.sh" -O /usr/bin/opvss
	wget -q --no-check-certificate "$rawgit/$usergit/opvss/main/autorekonek-opvss.sh" -O /usr/bin/autorekonek-opvss
	wget -q --no-check-certificate "$comgit/$usergit/sst/blob/main/simple-obfs_0.0.5-5_aarch64_cortex-a53.ipk?raw=true" -O ~/simple-obfs.ipk
	wget -q --no-check-certificate "$comgit/$usergit/sst/blob/main/ck-client?raw=true" -O /usr/bin/ck-client
	cek2=$(ls /usr/bin/ | grep ss-local)
	if [ $cek2 = "ss-local" ]; then
	echo > /dev/null
	else
	opkg install shadowsocks-libev-ss-local
	fi
	opkg install *.ipk && opkg install lsof openvpn-openssl fping
	chmod +x /usr/bin/ck-client
	chmod +x /usr/bin/opvss
	chmod +x /usr/bin/autorekonek-opvss
	rm -r ~/install.sh
	rm -r ~/*.ipk
	mkdir -p ~/akun/
	touch ~/akun/opvss.txt
	touch ~/akun/pass-opvss.txt
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "slowdns" ]]; then
	#slowdns
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}slowdns${Y}..."
	echo -e "================================"
	echo -e "${N}"
	wget -q --no-check-certificate "$rawgit/$usergit/slowdns/main/slowdns.sh" -O /usr/bin/slowdns
	wget -q --no-check-certificate "$rawgit/$usergit/slowdns/main/autorekonek-slowdns.sh" -O /usr/bin/autorekonek-slowdns
	wget -q --no-check-certificate "$comgit/$usergit/slowdns/blob/main/dns-client-v19?raw=true" -O /usr/bin/dns-client
	chmod +x /usr/bin/slowdns
	chmod +x /usr/bin/dns-client
	chmod +x /usr/bin/autorekonek-slowdns
	opkg install openvpn-openssl && opkg install ip-full && opkg install openssh-client && opkg install --force-depends *.ipk && opkg install lsof && opkg install fping screen python python3 coreutils-nohup
	rm -r ~/*.ipk
	rm -r ~/install.sh
	mkdir -p ~/akun/
	touch ~/akun/slowdns.txt
	touch ~/akun/ipmodem.txt 
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "ssrt" ]]; then
	#ssrt
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}ssrt${Y}..."
	echo -e "================================"
	echo -e "${N}"
	wget -q --no-check-certificate "$rawgit/$usergit/ssrt/main/ssrt.sh" -O /usr/bin/ssrt
	wget -q --no-check-certificate "$rawgit/$usergit/ssrt/main/autorekonek-ssrt.sh" -O /usr/bin/autorekonek-ssrt
	wget -q --no-check-certificate "$comgit/$usergit/backup/blob/main/tun2socks?raw=true" -O /usr/bin/tun2socks
	chmod +x /usr/bin/tun2socks
	cek=$(cat /etc/openwrt_r* | grep -i RELEASE | cut -d= -f2 | cut -d"'" -f2 | cut -d. -f1)
	if [ "$cek" = "19" ]; then
	wget -q --no-check-certificate "$comgit/$usergit/ssrt/blob/main/shadowsocksr-libev_1-0-0-wegare_aarch64_cortex-a53.ipk?raw=true" -O ~/ssr-libev.ipk
	elif [ "$cek" = "18" ]; then
	wget -q --no-check-certificate "$comgit/$usergit/ssrt/blob/main/shadowsocksr-libev_2.5.6-5_aarch64_cortex-a53.ipk?raw=true" -O ~/ssr-libev.ipk
	else
	echo "frimware versi yang anda gunakan tidak terdeteksi silahkan install sendiri shadowsocksr-libev nya"
	fi
	opkg install ip-full && opkg install *.ipk && opkg install lsof && opkg install fping
	chmod +x /usr/bin/ssrt
	chmod +x /usr/bin/autorekonek-ssrt
	rm -r ~/*.ipk
	rm -r ~/install.sh
	mkdir -p ~/akun/
	touch ~/akun/ssrt.conf
	touch ~/akun/ssrt.txt
	touch ~/akun/ipmodem.txt 
	sleep 2
	echo -e "${G}"
	echo -e "================================"
	echo -e "Installation success..."
	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "sst" ]]; then
	#sst
	echo -e "${Y}"
	echo -e "================================"
	echo -e "Installing Wegare Tools - ${G}sst${Y}..."
