	echo -e "================================"
	echo -e "${N}"
elif [[ $1 = "install" ]]; then
	/bin/wegare l2i
	/bin/wegare opvc
	/bin/wegare opvss
	/bin/wegare slowdns
	/bin/wegare ssrt
	/bin/wegare sst
	/bin/wegare sstp
	/bin/wegare stl
	/bin/wegare tjg
	/bin/wegare tjt
